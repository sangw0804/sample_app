<% provide(:title, "All users")%>
<h1>All Users</h1>

<%= will_paginate%>
<ul class="users">
    <% @users.each do |user|%>
        <li>
            <%= gravatar_for user, size: 50%>
            <%= link_to user.name, user%>
            <%= link_to 'delete', user, method: :delete, data: {confirm: "you sure?"} if current_user.admin? && !current_user?(user)%>
        </li>
    <% end%>
</ul>
<%= will_paginate%>